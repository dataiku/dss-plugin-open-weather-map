{
    "meta" : {
        "label": "Weather generating",
        "description": "Get historical and forecast weather data from anywhere around the world. Forecast limited to 7 days forward and Historical data to 5 days back."
    },
    "readable": true,
    "writable": false,
    "params": [
        {
            "name": "preset_config",
            "label": "OpenWeatherMap Preset",
            "type": "PRESET",
            "parameterSetId": "open-weather-map-config"
        },
        {
            "name": "latitude",
            "label": "Latitude of the target location",
            "type": "DOUBLE",
            "description": "",
            "mandatory": true
        },
        {
            "name": "longitude",
            "label": "Longitude of the target location",
            "type": "DOUBLE",
            "description": "",
            "mandatory": true
        },
        {
            "name": "granularity",
            "label": "Granularity",
            "type": "SELECT",
            "defaultValue": "daily",
            "selectChoices": [
                {
                    "value": "hourly",
                    "label": "Hourly"
                },
                {
                    "value": "daily",
                    "label": "Daily"
                }
            ]
        },
        {
            "name": "advanced_mode",
            "type": "BOOLEAN",
            "label" : "Advanced mode",
            "defaultValue" : false
        },
        {
            "name": "data_type",
            "label": "Data type",
            "type": "SELECT",
            "defaultValue": "all",
            "selectChoices": [
                {
                    "value": "all",
                    "label": "Historical & Forecast"
                },
                {
                    "value": "historical",
                    "label": "Historical"
                },
                {
                    "value": "forecast",
                    "label": "Forecast"
                }
            ],
            "visibilityCondition" : "model.advanced_mode"
        },
        {
            "name": "units",
            "label": "System of units",
            "type": "SELECT",
            "defaultValue": "default",
            "selectChoices": [
                {
                    "value": "default",
                    "label": "Default (Configured in Preset)"
                },
                {
                    "value": "standard",
                    "label": "Standard (Temperature in Kelvin, speed in meter/second, Pressure in hPa)"
                },
                {
                    "value": "metric",
                    "label": "Metric (Temperature in Celsius, speed in meter/second), Pressure in hPa"
                },
                {
                    "value": "imperial",
                    "label": "Imperial (Temperature in Fahrenheit, speed in mile/hour), Pressure in hPa"
                }
            ],
            "visibilityCondition" : "model.advanced_mode"
        },
        {
            "name": "lang",
            "label": "Language",
            "type": "SELECT",
            "defaultValue": "default",
            "selectChoices": [
                {
                    "value": "default",
                    "label": "Default (Configured in Preset)"
                },
                {
                    "value": "en",
                    "label": "English"
                },
                {
                    "value": "fr",
                    "label": "French"
                },
                {
                    "value": "de",
                    "label": "German"
                }
            ],
            "visibilityCondition" : "model.advanced_mode"
        },
        {
            "name": "cache_enabled",
            "type": "BOOLEAN",
            "label" : "Use cache",
            "defaultValue": true,
            "visibilityCondition" : "model.advanced_mode && model.data_type != 'forecast'"
        }
    ]
}
